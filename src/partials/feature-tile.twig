<div class="container feature-tile">
    <div class="row no-gutters d-flex {{ flexDirection }} align-items-start pt-5">
        <div class="col-12 col-md-5">
            <img src="{{ image }}" alt="">
        </div>
        <div class="col col-md-7 bg-b1 p-4 p-md-5 mt-md-5">
            <h1 class="display-4 mb-3 mb-md-5 title">
            {% block title %}{% endblock %}
            </h1>
            <p class="p2">{{ description }}</p>
        </div>
    </div>
</div>